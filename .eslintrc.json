{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "default-case": "off",
    "import/extensions": ["error", "ignorePackages", {
      "js": "always",
      "jsx": "always"
    }],
    "import/no-unresolved": "off",
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx"]
        }
      }
    }
  },
  "ignorePatterns": "dist/**/*.js"
}